---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const allArticles = await getCollection('articles');
const tags = [...new Set(allArticles.flatMap((article) => article.data.tags))];

const tagCounts = tags.map((tag) => {
  const count = allArticles.filter((article) => 
    article.data.tags.includes(tag)
  ).length;
  return { tag, count };
}).sort((a, b) => b.count - a.count);
---

<BaseLayout 
  title="Browse by Topic" 
  description="Ideas organized by obsession. Find your rabbit hole."
>
  <section class="container py-16">
    <div class="max-w-6xl mx-auto">
      <div class="mb-12">
        <p class="text-meridian-burgundy font-bold uppercase tracking-wider mb-4">
          Curated Obsessions
        </p>
        <h1 class="text-5xl md:text-6xl font-bold mb-6">
          Ideas Worth <span class="gradient-meridian bg-clip-text text-transparent">Following</span>
        </h1>
        <p class="text-xl text-meridian-steel max-w-3xl">
          Great thinking rarely fits in boxes. But sometimes boxes help us find 
          what we're looking for. Dive into any topic that catches your eye.
        </p>
      </div>
      
      {tagCounts.length > 0 ? (
        <div class="grid gap-6 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 mb-16">
          {tagCounts.map(({ tag, count }) => (
            <a 
              href={`/tags/${tag}`}
              class="group relative overflow-hidden rounded-lg border-2 border-transparent hover:border-meridian-burgundy transition-all duration-300"
            >
              <div class="p-6 bg-white hover:bg-meridian-light-gray transition-colors">
                <h2 class="text-2xl font-bold mb-2 capitalize group-hover:text-meridian-burgundy transition-colors">
                  {tag}
                </h2>
                <p class="text-meridian-steel">
                  {count} {count === 1 ? 'perspective' : 'perspectives'}
                </p>
                <div class="absolute bottom-2 right-2 text-6xl font-bold text-meridian-light-gray/50 group-hover:text-meridian-burgundy/20 transition-colors">
                  {count}
                </div>
              </div>
            </a>
          ))}
        </div>
      ) : (
        <div class="text-center py-16 bg-meridian-light-gray rounded-lg">
          <p class="text-xl text-meridian-steel">
            Tags will appear here as we publish more content.
          </p>
          <p class="text-lg text-meridian-steel mt-2">
            Check back soon for organized brilliance.
          </p>
        </div>
      )}
      
      <div class="bg-meridian-burgundy text-white p-8 rounded-lg">
        <h2 class="text-2xl font-bold mb-4">Can't Find What You're Looking For?</h2>
        <p class="text-lg mb-6">
          Sometimes the best ideas live between categories. Try our search to find 
          exactly what you need, or browse all articles to discover something unexpected.
        </p>
        <div class="flex flex-col sm:flex-row gap-4">
          <a href="/articles" class="btn bg-white text-meridian-burgundy hover:bg-meridian-light-gray">
            Browse All Articles
          </a>
          <a href="/contact" class="btn border-2 border-white text-white hover:bg-white hover:text-meridian-burgundy">
            Suggest a Topic
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>