---
import BaseLayout from '../layouts/BaseLayout.astro';
import ArticleCard from '../components/ArticleCard.astro';
import { getCollection } from 'astro:content';

const allArticles = await getCollection('articles', ({ data }) => {
  return data.draft !== true;
});

const recentArticles = allArticles
  .sort((a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf())
  .slice(0, 6);
---

<BaseLayout title="Home">
  <section class="min-h-screen flex items-center justify-center py-20">
    <div class="container">
      <div class="max-w-5xl mx-auto text-center">
        <p class="text-meridian-burgundy font-bold uppercase tracking-wider mb-4">
          Welcome to the Revolution
        </p>
        <h1 class="text-6xl md:text-7xl font-bold mb-6">
          <span class="gradient-meridian bg-clip-text text-transparent">
            Project Meridian
          </span>
        </h1>
        <p class="text-2xl md:text-3xl font-light text-meridian-steel mb-8 leading-relaxed">
          Where brave ideas meet 
          <span class="text-meridian-burgundy font-semibold">bold execution</span>.
        </p>
        <p class="text-xl text-meridian-dark max-w-3xl mx-auto mb-12">
          We don't just study the future. We build it, challenge it, and occasionally, 
          blow it up to see what happens next.
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/articles" class="btn bg-meridian-burgundy text-white hover:bg-meridian-dark text-lg px-8 py-3">
            Explore Our Thinking
          </a>
          <a href="/work" class="btn bg-transparent border-2 border-meridian-burgundy text-meridian-burgundy hover:bg-meridian-burgundy hover:text-white text-lg px-8 py-3">
            See Our Work
          </a>
        </div>
      </div>
    </div>
  </section>
  
  {recentArticles.length > 0 && (
    <section class="container py-20 border-t border-meridian-light-gray">
      <div class="mb-12">
        <p class="text-meridian-burgundy font-bold uppercase tracking-wider mb-4">
          Fresh Perspectives
        </p>
        <div class="flex items-end justify-between mb-8">
          <h2 class="text-4xl md:text-5xl font-bold">
            Ideas Worth <span class="text-meridian-burgundy">Spreading</span>
          </h2>
          <a href="/articles" class="btn bg-transparent border border-meridian-burgundy text-meridian-burgundy hover:bg-meridian-burgundy hover:text-white hidden sm:inline-flex">
            All Articles →
          </a>
        </div>
        <p class="text-xl text-meridian-steel max-w-3xl">
          Provocations, patterns, and possibilities from the edge of what's next. 
          Each piece a conversation starter, not a final answer.
        </p>
      </div>
      
      <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
        {recentArticles.map((article) => (
          <ArticleCard
            title={article.data.title}
            description={article.data.description}
            publishDate={article.data.publishDate}
            author={article.data.author}
            tags={article.data.tags}
            slug={article.slug}
            image={article.data.image}
          />
        ))}
      </div>
      
      <div class="mt-8 sm:hidden">
        <a href="/articles" class="btn w-full text-center bg-transparent border border-meridian-burgundy text-meridian-burgundy hover:bg-meridian-burgundy hover:text-white">
          View All Articles →
        </a>
      </div>
    </section>
  )}
  
  <section class="bg-meridian-light-gray py-20">
    <div class="container">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-4xl md:text-5xl font-bold mb-6">
          Ready to Challenge the Status Quo?
        </h2>
        <p class="text-xl text-meridian-steel mb-8">
          The best time to transform was yesterday. The second best time is now.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/contact" class="btn bg-meridian-burgundy text-white hover:bg-meridian-dark text-lg px-8 py-3">
            Start a Conversation
          </a>
          <a href="/about" class="btn bg-transparent border-2 border-meridian-dark text-meridian-dark hover:bg-meridian-dark hover:text-white text-lg px-8 py-3">
            Learn Our Approach
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>