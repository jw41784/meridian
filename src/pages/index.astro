---
import BaseLayout from '../layouts/BaseLayout.astro';
import ArticleCard from '../components/ArticleCard.astro';
import { getCollection } from 'astro:content';
import { getUrl } from '../utils/links';

const allArticles = await getCollection('articles', ({ data }) => {
  return data.draft !== true;
});

const recentArticles = allArticles
  .sort((a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf())
  .slice(0, 6);
---

<BaseLayout title="Home">
  <section class="min-h-screen flex items-center justify-center py-20">
    <div class="container">
      <div class="max-w-5xl mx-auto text-center">
        <p class="text-meridian-burgundy font-bold uppercase tracking-wider mb-4">
          Welcome to What's Next
        </p>
        <h1 class="text-6xl md:text-7xl font-bold mb-6">
          <span class="gradient-meridian bg-clip-text text-transparent">
            Project Meridian
          </span>
        </h1>
        <p class="text-2xl md:text-3xl font-light text-meridian-steel mb-8 leading-relaxed">
          Where curious minds create 
          <span class="text-meridian-burgundy font-semibold">amazing things</span>.
        </p>
        <p class="text-xl text-meridian-dark max-w-3xl mx-auto mb-12">
          We believe the best ideas come from asking "what if?" and actually finding out. 
          Join us as we explore, experiment, and build the future together.
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href={getUrl('articles')} class="btn bg-meridian-burgundy text-white hover:bg-meridian-dark text-lg px-8 py-3">
            Explore Our Thinking
          </a>
          <a href={getUrl('work')} class="btn bg-transparent border-2 border-meridian-burgundy text-meridian-burgundy hover:bg-meridian-burgundy hover:text-white text-lg px-8 py-3">
            See Our Work
          </a>
        </div>
      </div>
    </div>
  </section>
  
  {recentArticles.length > 0 && (
    <section class="container py-20 border-t border-meridian-light-gray">
      <div class="mb-12">
        <p class="text-meridian-burgundy font-bold uppercase tracking-wider mb-4">
          What We're Thinking About
        </p>
        <div class="flex items-end justify-between mb-8">
          <h2 class="text-4xl md:text-5xl font-bold">
            Ideas Worth <span class="text-meridian-burgundy">Sharing</span>
          </h2>
          <a href={getUrl('articles')} class="btn bg-transparent border border-meridian-burgundy text-meridian-burgundy hover:bg-meridian-burgundy hover:text-white hidden sm:inline-flex">
            All Articles →
          </a>
        </div>
        <p class="text-xl text-meridian-steel max-w-3xl">
          Insights, experiments, and "aha!" moments from our journey. 
          We're learning out loud and inviting you to join the conversation.
        </p>
      </div>
      
      <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
        {recentArticles.map((article) => (
          <ArticleCard
            title={article.data.title}
            description={article.data.description}
            publishDate={article.data.publishDate}
            author={article.data.author}
            tags={article.data.tags}
            slug={article.slug}
            image={article.data.image}
          />
        ))}
      </div>
      
      <div class="mt-8 sm:hidden">
        <a href={getUrl('articles')} class="btn w-full text-center bg-transparent border border-meridian-burgundy text-meridian-burgundy hover:bg-meridian-burgundy hover:text-white">
          View All Articles →
        </a>
      </div>
    </section>
  )}
  
  <section class="bg-meridian-light-gray py-20">
    <div class="container">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-4xl md:text-5xl font-bold mb-6">
          Ready to Create Something Amazing?
        </h2>
        <p class="text-xl text-meridian-steel mb-8">
          The best ideas happen when talented people work together. Let's see what's possible.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href={getUrl('contact')} class="btn bg-meridian-burgundy text-white hover:bg-meridian-dark text-lg px-8 py-3">
            Say Hello
          </a>
          <a href={getUrl('about')} class="btn bg-transparent border-2 border-meridian-dark text-meridian-dark hover:bg-meridian-dark hover:text-white text-lg px-8 py-3">
            Get to Know Us
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>