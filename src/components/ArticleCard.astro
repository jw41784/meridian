---
import { getUrl } from "../utils/links";

export interface Props {
  title: string;
  description: string;
  publishDate: Date;
  author: string;
  tags: string[];
  slug: string;
  readingTime?: string;
  image?: {
    src: string;
    alt: string;
  };
}

const {
  title,
  description,
  publishDate,
  author,
  tags,
  slug,
  readingTime,
  image,
} = Astro.props;

const formattedDate = new Date(publishDate).toLocaleDateString("en-US", {
  year: "numeric",
  month: "long",
  day: "numeric",
});
---

<article class="card flex h-full flex-col p-6">
  {
    image && (
      <img
        src={image.src}
        alt={image.alt}
        class="mb-4 h-48 w-full rounded-md object-cover"
      />
    )
  }

  <h2 class="mb-2 text-xl font-semibold">
    <a
      href={getUrl(`articles/${slug}`)}
      class="transition-colors hover:text-meridian-burgundy dark:hover:text-meridian-steel"
    >
      {title}
    </a>
  </h2>

  <p class="mb-4 flex-grow text-meridian-steel dark:text-gray-400">
    {description}
  </p>

  <div class="mb-4 flex flex-wrap gap-2">
    {
      tags.map((tag) => (
        <a href={getUrl(`tags/${tag}`)} class="tag">
          {tag}
        </a>
      ))
    }
  </div>

  <div class="text-sm text-meridian-steel dark:text-gray-400">
    <span>{author}</span> • <time datetime={publishDate.toISOString()}
      >{formattedDate}</time
    >
    {
      readingTime && (
        <>
          {" "}
          • <span>{readingTime}</span>
        </>
      )
    }
  </div>
</article>
