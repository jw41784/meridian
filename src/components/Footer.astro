---
import { getUrl } from "../utils/links";
const year = new Date().getFullYear();
---

<footer
  class="mt-auto bg-meridian-light-gray transition-colors dark:bg-gray-800"
>
  <div class="container py-8">
    <div class="grid grid-cols-1 gap-8 md:grid-cols-3">
      <div>
        <h3 class="mb-2 font-semibold">Project Meridian</h3>
        <p class="text-sm text-meridian-steel dark:text-gray-400">
          Insights and updates from the forefront of innovation.
        </p>
      </div>

      <div>
        <h3 class="mb-2 font-semibold">Quick Links</h3>
        <ul class="space-y-1 text-sm">
          <li>
            <a
              href={getUrl("articles")}
              class="text-meridian-steel hover:text-meridian-burgundy dark:text-gray-400 dark:hover:text-meridian-steel"
              >Articles</a>
          </li>
          <li>
            <a
              href={getUrl("about")}
              class="text-meridian-steel hover:text-meridian-burgundy dark:text-gray-400 dark:hover:text-meridian-steel"
              >About</a>
          </li>
          <li>
            <a
              href={getUrl("tags")}
              class="text-meridian-steel hover:text-meridian-burgundy dark:text-gray-400 dark:hover:text-meridian-steel"
              >Browse Tags</a>
          </li>
          <li>
            <a
              href={getUrl("rss.xml")}
              class="text-meridian-steel hover:text-meridian-burgundy dark:text-gray-400 dark:hover:text-meridian-steel"
              >RSS Feed</a>
          </li>
        </ul>
      </div>

      <div>
        <h3 class="mb-2 font-semibold">Connect</h3>
        <p class="mb-2 text-sm text-meridian-steel dark:text-gray-400">
          Questions? Ideas? Let's talk.
        </p>
        <a
          href="mailto:info@eudexio.com"
          class="text-sm text-meridian-burgundy hover:text-meridian-dark dark:text-meridian-steel dark:hover:text-meridian-light-gray"
        >
          info@eudexio.com
        </a>
      </div>
    </div>

    <div
      class="mt-8 border-t border-meridian-steel/20 pt-8 dark:border-gray-700"
    >
      <div class="flex flex-col items-center gap-4">
        <img
          src={getUrl("meridianlogo.svg")}
          alt="Project Meridian Logo"
          class="h-12 w-12"
        />
        <p class="text-sm text-meridian-steel dark:text-gray-400">
          &copy; {year} Project Meridian. All rights reserved.
        </p>
      </div>
    </div>
  </div>
</footer>
